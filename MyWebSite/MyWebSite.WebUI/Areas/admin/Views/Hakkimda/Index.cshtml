@model IEnumerable<Hakkimda>
<div class="right_col" role="main">
	<div class="">
		<div class="page-title">
			<div class="title_left">
				<h3>Hakkımda </h3>
			</div>


		</div>

		<div class="clearfix"></div>

		<div class="row" style="display: block;">






			<div class="col-md-12 col-sm-12  ">
				<div class="x_panel">
					<div class="x_title">


						<div class="clearfix"></div>
					</div>

					<div class="x_content">
						<a asp-area="admin" asp-controller="Hakkimda" asp-action="New" class="btn btn-success" style="float:right;color:#fff">Yeni Bilgi Ekle</a>


						<div class="table-responsive">
							<table class="table table-striped jambo_table bulk_action">
								<thead>
									<tr class="headings" >

										<th class="column-title">Başlık </th>
										<th class="column-title">Açıklama </th>

								</thead>

								<tbody>
									@foreach (Hakkimda s in Model)
									{
										<tr class="even pointer">
											<td class="a-right a-right ">@s.Baslik</td>
											<td class="a-right a-right ">@s.Aciklama</td>
												
											<td>
												<a asp-asp-area="admin" asp-controller="Hakkimda"asp-action="Delete" asp-route-id="@s.ID" class="btn btn-danger"
												style="float:right;color:#fff">Sil</a>
											</td>
											
										</tr>
									}

								</tbody>
							</table>
						</div>


					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- /page content -->