@model Hakkimda
<div class="right_col" role="main" style="padding:0">
	<div class="">


		<div class="row">
			<div class="col-md-12 col-sm-12 ">
				<div class="x_panel">
					<div class="x_title">
						<h2>Hakkımda <small>Yeni Bilgi Ekle</small></h2>

						<div class="clearfix"></div>
					</div>
					<div class="x_content">
						<br />
						<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" asp-area="admin" asp-controller="Hakkimda" asp-action="Edit" method="post">
							<input type="hidden" asp-for="@Model.ID" />


							<div class="item form-group">
								<label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Baslik">

								</label>
								<div class="col-md-4 col-sm-4 ">
									<input class="form-control" asp-for="@Model.Baslik" />
									<span asp-validation-for="@Model.Baslik"></span>
								</div>
							</div>

							<div class="item form-group">
								<label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Aciklama"></label>
								<div class="col-md-4 col-sm-4 ">
									<textarea class="form-control" asp-for="@Model.Aciklama"></textarea>
									<span asp-validation-for="@Model.Aciklama"></span>
								</div>
							</div>


							<div class="ln_solid"></div>
							<div class="item form-group">
								<div class="col-md-6 col-sm-6 offset-md-3">
									<a asp-area="admin" asp-controller="Hakkimda" asp-action="Index" class="btn btn-primary" type="button">İptal</a>
									<button class="btn btn-primary" type="reset">Temizle</button>
									<button type="submit" class="btn btn-success">Güncelle</button>
								</div>
							</div>

						</form>
					</div>
				</div>
			</div>
		</div>


	</div>
</div>
<!-- /page content -->